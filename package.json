{
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "dev:node": "tsnd -r dotenv/config --respawn src/node.ts",
    "db:migrate:up": "tsnd -r dotenv/config ./src/lib/db/migrate up && npm run db:generate:types",
    "db:migrate:down": "tsnd -r dotenv/config ./src/lib/db/migrate down && npm run db:generate:types",
    "db:migrate:redo": "tsnd -r dotenv/config ./src/lib/db/migrate redo && npm run db:generate:types",
    "db:seed": "tsnd -r dotenv/config ./src/lib/db/seed",
    "db:generate:types": "npx kanel && npm run db:types:prettier",
    "db:types:prettier": "prettier --write ./src/lib/db/schema && eslint ./src/lib/db/schema --ext .ts,.tsx --fix",
    "prettier": "prettier --write ."
  },
  "dependencies": {
    "@hono/node-server": "^1.2.0",
    "hono": "^3.7.2",
    "kysely": "^0.26.3",
    "kysely-migration-cli": "^0.2.3",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/pg": "^8.10.3",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "bun-types": "^0.6.2",
    "dotenv": "^16.3.1",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import-helpers": "^1.3.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "kanel-kysely": "^0.2.0",
    "prettier": "^3.0.3",
    "ts-node-dev": "^2.0.0"
  }
}
